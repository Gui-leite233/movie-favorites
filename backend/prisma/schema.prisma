generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model favorite {
  id        Int      @id @default(autoincrement())
  title     String
  movieId   Int      @unique
  posterUrl String?
  rating    Float?
  createdAt DateTime @default(now())
}

model SharedList {
  id        Int      @id @default(autoincrement())
  token     String   @unique
  favorites Json     // Armazena array de IDs dos favoritos
  createdAt DateTime @default(now())
}